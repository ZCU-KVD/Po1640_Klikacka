@page "/"

<PageTitle>Home</PageTitle>

<h1>Klikačka!</h1>

<div>
	<table>
		@for (int i = 0; i < Grafika.PoleBunek.GetLength(0); i++)
		{
			var radka = i;
			<tr>
				@for (int j = 0; j < Grafika.PoleBunek.GetLength(1); j++)
				{
					var sloupec = j;
					<td class="@Grafika.PoleBunek[i, j].StyleClassName"
						@onclick="()=>Grafika.OnClickCell(Grafika.PoleBunek[radka, sloupec])">
						@Grafika.PoleBunek[i, j].Hodnota
					</td>
				}
			</tr>
		}
	</table>
</div>

@code {
	private Models.Grafika Grafika { get; set; } = new Models.Grafika();
}