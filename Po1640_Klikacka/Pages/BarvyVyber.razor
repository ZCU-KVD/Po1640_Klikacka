@page "/barvyVyber"

<PageTitle>Klikačka</PageTitle>

<h3>Vybarvení tabulky</h3>

<div>
	<table>
		<tr>
			@foreach (var item in Grafika.BarvySeznam)
			{
				<td class="@item.StyleClassName"
					@onclick="()=>Grafika.OnClickCell(item)">
					@item.Hodnota
				</td>
			}
			
		</tr>
	</table>
</div>

<div>
	<table>
		@for (int i = 0; i < Grafika.PoleBunek.GetLength(0); i++)
		{
			var radka = i;
			<tr>
				@for (int j = 0; j < Grafika.PoleBunek.GetLength(1); j++)
				{
					var sloupec = j;
					<td class="@Grafika.PoleBunek[i, j].StyleClassName"
						@onclick="()=>Grafika.OnClickCell(Grafika.PoleBunek[radka, sloupec], true)">
						@Grafika.PoleBunek[i, j].Hodnota
					</td>
				}
			</tr>
		}
	</table>
</div>

@code {
	//private Models.Grafika Grafika { get; set; } = new Models.Grafika(10,15,4);
	private Models.Grafika Grafika { get; set; } = new Models.Grafika(10, 15);
}